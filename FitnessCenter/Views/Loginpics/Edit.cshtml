@model FitnessCenter.Models.Loginpic

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="m-5">
    <h1 class="mb-3">Edit Login Page</h1>

    <hr />
    <div class="row">
        <div class="col-md-4">
            <form enctype="multipart/form-data" asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input  type="hidden" asp-for="Id" />


                <div class="form-group mb-3">
                    <label asp-for="ImageFile" ><i class="zmdi zmdi-account material-icons-name"></i></label>
                    <input asp-for="ImageFile" class="btn btn-outline-primary btn-sm" />
                </div>
                @{
                    var path = Model.Loginimagepath;
                }
                <img src="~/Images/@path" style="width:250px; object-fit:cover" />
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>

</div>