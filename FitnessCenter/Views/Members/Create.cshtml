@model FitnessCenter.Models.Member

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="m-5">
    <h1>Create Member</h1>

    <hr />
    <div class="row">
        <div class="col-md-4 ">
            <form enctype="multipart/form-data" asp-action="Create">
               
                <div class="form-group">
                    <input asp-for="FirstName" class="form-control" placeholder="FirstName" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="LastName" class="form-control" placeholder="LastName" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="Email" class="form-control" placeholder="Email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

               

                <div class="form-group">
                    <input asp-for="WorkoutPlaneId" class="form-control" placeholder="WorkoutPlaneId" />
                </div>

                <div class="form-group">
                    <input asp-for="Password" class="form-control" placeholder="Password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="ImageFile"><i class="zmdi zmdi-account material-icons-name"></i></label>
                    <input asp-for="ImageFile" />
                </div>

                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index" class="btn btn-primary btn-sm">Back to List</a>
    </div>

</div>