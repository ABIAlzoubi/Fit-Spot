@{
    Layout = "~/Views/Shared/_TrainerLayout.cshtml";
}


@model FitnessCenter.Models.Staff

<div class="row col-11 m-5">


    <div class="col-md-4 border-right" style="background-color:white">
        <div class="d-flex flex-column align-items-center text-center p-3 py-5">
            <img class="rounded-circle mt-5" src="~/Images/@Model.Image" height="120px" width="120px" style="object-fit:cover">
            <span class="font-weight-bold">@Model.FirstName @Model.LastName</span><span class="text-black-50">@Model.Email</span>
        </div>
    </div>


    <div class="col-md-8" style="background-color:white">
        <form enctype="multipart/form-data" asp-action="UpdateTrainer" class="signUp-form">
            <div class="p-3 py-5">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <div>
                        <a asp-action="Index" class="d-flex flex-row align-items-center back"><i class="fa fa-long-arrow-left mr-1 mb-1"></i><h6>Back to home</h6></a>
                    </div>
                    <h6 class="text-right">Edit Profile</h6>
                </div>


                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="StaffId" />

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="JoinDate" />

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="RoleId" />



                <div class="row mt-2">
                    <div class="col-md-6">
                        <input asp-for="FirstName" type="text" class="form-control" placeholder="First Name" required value=@Model.FirstName>
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <input asp-for="LastName" type="text" class="form-control" placeholder="Last Name" value=@Model.LastName>
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                </div>


                <div class="row mt-2">
                    <div class="col-md-6">
                        <input asp-for="Email" type="text" class="form-control" placeholder="Last Name" required value=@Model.Email>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <input asp-for="Password" type="password" class="form-control" placeholder="Last Name" required value=@Model.Password>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="ImageFile"><i class="zmdi zmdi-account material-icons-name"></i></label>
                    <input asp-for="ImageFile" />
                </div>

                <div class="mt-5 text-right form-group"><button type="submit" class="form-control btn btn-outline-primary btn-sm rounded submit px-3">Save Profile</button></div>

            </div>
        </form>
    </div>
</div>


