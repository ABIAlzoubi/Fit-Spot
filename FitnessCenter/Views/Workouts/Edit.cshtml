@model FitnessCenter.Models.Workout

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_TrainerLayout.cshtml";
}

<div class="m-5">

    <h1 class="mb-3">Update Workout</h1>

    <hr />
    <div class="row">
        <div class="col-md-4">
            <form enctype="multipart/form-data" asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="WorkoutId" />
                <div class="form-group">
                    <label asp-for="WorkoutName" class="control-label"></label>
                    <input asp-for="WorkoutName" class="form-control" />
                    <span asp-validation-for="WorkoutName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="WorkoutDuration" class="control-label"></label>
                    <input asp-for="WorkoutDuration" class="form-control" />
                    <span asp-validation-for="WorkoutDuration" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Shift" class="control-label"></label>
                    <input asp-for="Shift" class="form-control" />
                    <span asp-validation-for="Shift" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Price" class="control-label"></label>
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="ImageFile"><i class="zmdi zmdi-account material-icons-name"></i></label>
                    <input asp-for="ImageFile" />
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index" class="btn-outline-primary">Back</a>
    </div>

</div>