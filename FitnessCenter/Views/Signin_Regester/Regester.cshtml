@{
    Layout = null;
}
@model FitnessCenter.Models.Member



<!doctype html>
<html lang="en">
<head>
    <title>SignUp</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

    <link rel="stylesheet" href="~/Signin/css/style.css">

    <link href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css' rel='stylesheet'>
    <link href='https://use.fontawesome.com/releases/v5.7.2/css/all.css' rel='stylesheet'>
    <script type='text/javascript' src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js'></script>


</head>

<style>
    ::-webkit-scrollbar {
    width: 8px;
    }

    /* Track */
    ::-webkit-scrollbar-track {
    background: #f1f1f1;
    }

    /* Handle */
    ::-webkit-scrollbar-thumb {
    background: #888;
    }

    /* Handle on hover */
    ::-webkit-scrollbar-thumb:hover {
    background: #555;
    }


    * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    list-style: none;
    font-family: 'Montserrat', sans-serif
    }



    .container {
    margin: 20px auto;
    width: 800px;
    padding: 30px
    }

    .card.box1 {
    width: 350px;
    height: 500px;
    background-color: #fe9418;
    color: #ffffff;
    border-radius: 0
    }

    .card.box2 {
    width: 450px;
    height: 580px;
    background-color: #ffffff;
    border-radius: 0
    }

    .text {
    font-size: 13px
    }

    .box2 .btn.btn-primary.bar {
    width: 20px;
    background-color: transparent;
    border: none;
    color: #baf0c3
    }

    .box2 .btn.btn-primary.bar:hover {
    color: #fe9418
    }

    .box1 .btn.btn-primary {
    background-color: #f6f8f7;
    width: 45px;
    height: 45px;
    display: flex;
    justify-content: center;
    align-items: center;
    border: 1px solid #ddd
    }

    .box1 .btn.btn-primary:hover {
    background-color: #fe9418;
    }

    .btn.btn-success {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background-color: #ddd;
    color: black;
    display: flex;
    justify-content: center;
    align-items: center;
    border: none
    }

    .CardData {
    color: darkgrey !important;
    padding-top:5px;

    }



    .inputWithIcon {
    position: relative
    }

    img {
    width: 50px;
    height: 20px;
    object-fit: cover
    }

    .inputWithIcon span {
    position: absolute;
    right: 0px;
    bottom: 15px;
    color: #fe9418;
    cursor: pointer;
    transition: 0.3s;
    font-size: 14px;
    padding-inline: 10px;
    }

    .form-control:focus {
    box-shadow: none;
    border: 1px solid black
    }

    .btn-outline-primary {
    color: black;
    background-color: #ddd;
    border: 1px solid #ddd
    }

    .btn-outline-primary:hover {
    background-color: #05cf48;
    border: 1px solid #ddd
    }

    .btn-check:active + .btn-outline-primary,
    .btn-check:checked + .btn-outline-primary,
    .btn-outline-primary.active,
    .btn-outline-primary.dropdown-toggle.show,
    .btn-outline-primary:active {
    color: #baf0c3;
    background-color: #3ecc6d;
    box-shadow: none;
    border: 1px solid #ddd
    }



    .btn-group > .btn-group:not(:last-child) > .btn,
    .btn-group > .btn:not(:last-child):not(.dropdown-toggle),
    .btn-group > .btn-group:not(:first-child) > .btn,
    .btn-group > .btn:nth-child(n+3),
    .btn-group > :not(.btn-check) + .btn {
    border-radius: 50px;
    margin-right: 20px
    }

    form {
    font-size: 14px
    }

    form .btn.btn-primary {
    width: 100%;
    height: 45px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    background-color: #3ecc6d;
    border: 1px solid #ddd
    }

    form .btn.btn-primary:hover {
    background-color: #05cf48
    }

</style>



<body className='snippet-body'>
    @{
        if (TempData["showButton"] != null)
        {
            <div id="customAlert" style="position: fixed; top: 70px; right: 50%; background-color: #28a745; color: white; padding: 15px; border-radius: 5px; z-index: 1000;">
                successful Payment
            </div>
            <script>
                setTimeout(function () {
                var alertElement = document.getElementById('customAlert');
                if (alertElement) {
                alertElement.style.display = 'none'; // Hide the alert after 3 seconds
                }
                }, 3000);
            </script>
        }
    }


    <div class="container bg-light d-md-flex align-items-center">

        <!-- first -->

        <div class="card box2 shadow-sm">
            <div class="p-5 ">

                <div class="d-flex">
                    <div class="w-100">
                        <h3 class="mb-4">Sign Up</h3>
                    </div>
                </div>

                <form enctype="multipart/form-data" asp-action="Regester" class="signUp-form">

                    <div class="form-group mb-3">
                        <input asp-for="FirstName" type="text" class="form-control"
                        onfocus="this.style.border='2px solid #fe9418';"
                        onblur="this.style.border='1px solid #ccc';" placeholder="First Name" required>
                    </div>

                    <div class="form-group mb-3">
                        <input asp-for="LastName" type="text" class="form-control"
                        onfocus="this.style.border='2px solid #fe9418';"
                        onblur="this.style.border='1px solid #ccc';" placeholder="Last Name" required>
                    </div>

                    <div class="form-group mb-3">
                        <input asp-for="Email" type="text" class="form-control"
                        onfocus="this.style.border='2px solid #fe9418';"
                        onblur="this.style.border='1px solid #ccc';" placeholder="Email" required>
                    </div>

                    <div class="form-group mb-3">
                        <input asp-for="Password" type="password" class="form-control"
                        onfocus="this.style.border='2px solid #fe9418';"
                        onblur="this.style.border='1px solid #ccc';" placeholder="Password" required>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="ImageFile"><i class="zmdi zmdi-account material-icons-name"></i></label>
                        <input asp-for="ImageFile" />
                    </div>



                    <div class="form-group d-md-flex">
                        <div class="w-50 text-left">
                            <label class="checkbox-wrap checkbox-primary mb-0" style="color:#fe9418 !important;">
                                Accept Terms?
                                <input type="checkbox">
                                <span class="checkmark"></span>
                            </label>
                        </div>
                    </div>
                    @if (TempData["showButton"] != null)
                    {
                        <div class="form-group">
                            <button type="submit" class="form-control btn btn-primary rounded submit px-3"
                            style="background:#fe9418 !important;">
                                Sign Up
                            </button>
                        </div>
                    }

                </form>
            </div>
        </div>


        <!-- second -->


        <div class="card box1 shadow-sm pt-5">

            <form enctype="multipart/form-data" asp-action="CardRegester">
                <div class="row" style="display: flex; flex-direction: column; justify-content: start;">
                    <div class="col-12">
                        <div class="m-2">
                            <span>Credit Card</span>
                            <div class="inputWithIcon">
                                <div class="form-control" type="text" name="CardNumber">
                                    <p class="CardData">@ViewBag.CardNumber</p>  <span class="">
                                        <img src="https://www.freepnglogos.com/uploads/mastercard-png/mastercard-logo-logok-15.png"
                                        alt="">
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="m-2">
                            <span>Expiration Date</span>
                            <div class="inputWithIcon">
                                <div class="form-control inputs"><p class="CardData"> @ViewBag.Expir</p> <span class="fas fa-calendar-alt"></span></div>
                            </div>
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="m-2">
                            <span>Code CVV</span>
                            <div class="inputWithIcon">
                                <div class=" form-control"><p class="CardData"> @ViewBag.CardCvv</p> <span class="fas fa-lock"></span> </div>
                            </div>
                        </div>
                    </div>


                    @if (TempData["showButton"] == null)
                    {
                    <div class="col-12 px-md-5 px-4 mt-3">
                        <button type="submit" class="btn btn-primary w-100"
                                style="color:darkgray !important">
                            Pay $@ViewBag.Price
                        </button>
                    </div>
                    }
                    

                </div>
            </form>
        </div>

    </div>
    <script type='text/javascript'
            src='https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js'></script>


</body>

</html>

