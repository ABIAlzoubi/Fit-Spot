@{
	Layout = null;
}

@model FitnessCenter.Models.Member

<!doctype html>
<html lang="en">
<head>
	<title>Login 04</title>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

	<link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">

	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

	<link rel="stylesheet" href="~/Signin/css/style.css">

</head>

@{
	var path = @ViewBag.loginPic;
}
<body>
	<section class="ftco-section">
		<div class="container">
			<div class="row justify-content-center">
				<div class="col-md-12 col-lg-10">
					<div class="wrap d-md-flex">
						<div class="img" style="background: url('@Url.Content("~/Images/"+path)'); object-fit:cover">
						</div>
						<div class="login-wrap p-4 p-md-5">
							<div class="d-flex">
								<div class="w-100">
									<h3 class="mb-4" style="color:#fe9418 !important;">Hellow Team Mate!</h3>
								</div>
							</div>
							<form enctype="multipart/form-data" asp-action="StaffSignin" class="signin-form">
								<div class="form-group mb-3">
									<input asp-for="Email" type="text" class="form-control" onfocus="this.style.border='2px solid #fe9418';" onblur="this.style.border='1px solid #ccc';" placeholder="Username" required>
								</div>
								<div class="form-group mb-3">
									<input asp-for="Password" type="password" class="form-control" onfocus="this.style.border='2px solid #fe9418';" onblur="this.style.border='1px solid #ccc';" placeholder="Password" required>
								</div>

								@if (ViewBag.ErrorMessage != null)
								{
									<span style="color: red;">@ViewBag.ErrorMessage</span>
								}
								<div class="form-group">
									<button type="submit" class="form-control btn btn-primary rounded submit px-3">Sign In</button>
								</div>
								<div class="form-group d-md-flex">
									<div class="w-50 text-left">
										<label class="checkbox-wrap checkbox-primary mb-0" style="color:#fe9418 !important;">
											Remember Me
											<input type="checkbox" >
											<span class="checkmark"></span>
										</label>
									</div>

								</div>
							</form>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>

	<script src="~/Signin/js/jquery.min.js"></script>
	<script src="~/Signin/js/popper.js"></script>
	<script src="~/Signin/js/bootstrap.min.js"></script>
	<script src="~/Signin/js/main.js"></script>

</body>
</html>

