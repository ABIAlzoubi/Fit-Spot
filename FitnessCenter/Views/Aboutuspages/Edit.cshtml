@model FitnessCenter.Models.Aboutuspage

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="m-5">

    <h1 class="mb-3">Edit About Us Page</h1>
    
    <hr />
    <div class="row">
        <div class="col-12">
            <form enctype="multipart/form-data" asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
               

                <div class="form-group">
                    <input asp-for="Aboutusheadertext" class="form-control" maxlength="350" placeholder="About Us Header Text" />
                    <span asp-validation-for="Aboutusheadertext" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <textarea asp-for="Aboutusparagraph" class="form-control" maxlength="350" style="height:250px" placeholder="About Us Paragraph" ></textarea>
                    <span asp-validation-for="Aboutusparagraph" class="text-danger"></span>
                </div>


                <div class="form-group mb-3">
                    <h6>Header Picture</h6>
                    <label asp-for="ImageFileHeaderPic"><i class="zmdi zmdi-account material-icons-name"></i></label>
                    <input asp-for="ImageFileHeaderPic" class="btn btn-outline-primary btn-sm" />
                </div>




                <div class="form-group mb-3">
                    <h6>Preview Picture 1</h6>
                    <label asp-for="ImageFileHeadPic1"><i class="zmdi zmdi-account material-icons-name"></i></label>
                    <input asp-for="ImageFileHeadPic1" class="btn btn-outline-primary btn-sm" />
                </div>

                <div class="form-group mb-3">
                    <h6>Preview Picture 2</h6>
                    <label asp-for="ImageFileHeadPic2"><i class="zmdi zmdi-account material-icons-name"></i></label>
                    <input asp-for="ImageFileHeadPic2" class="btn btn-outline-primary btn-sm" />
                </div>

                


                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

</div>