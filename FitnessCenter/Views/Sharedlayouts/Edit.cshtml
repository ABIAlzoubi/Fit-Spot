@model FitnessCenter.Models.Sharedlayout

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="m-5">
    <h1 class="mb-3">Edit Primary layout</h1>

    <h4></h4>
    <hr />
    <div class="row">
        <div class=" col-12">
            <form enctype="multipart/form-data" asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />


                <h4>Navbar Section</h4>
                <hr />
                <div class="form-group mb-3">
                    <h6>Logo Picture</h6>
                    <label asp-for="ImageFile"><i class="zmdi zmdi-account material-icons-name"></i></label>
                    <input asp-for="ImageFile" class="btn btn-outline-primary btn-sm" />
                </div>
                <h4>Footer Section</h4>
                <hr />
                <div class="form-group">
                    <input asp-for="Facebooklink" class="form-control" maxlength="350" placeholder="Facebook Link" />
                    <span asp-validation-for="Facebooklink" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="Twitterlink" class="form-control" maxlength="350" placeholder="Twitter Link" />
                    <span asp-validation-for="Twitterlink" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="Githublink" class="form-control" maxlength="350" placeholder="Github Link" />
                    <span asp-validation-for="Githublink" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <textarea asp-for="Photerparagraph" class="form-control" maxlength="350" style="height:250px" placeholder="Photer Paragraph" ></textarea>
                    <span asp-validation-for="Photerparagraph" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="Homelocation" class="form-control" maxlength="350" placeholder="Home Location" />
                    <span asp-validation-for="Homelocation" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="Copywritestatement" class="form-control" maxlength="350" placeholder="Copy Write Statement" />
                    <span asp-validation-for="Copywritestatement" class="text-danger"></span>
                </div>

                
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>

</div>