@model FitnessCenter.Models.Testimonial

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_PrimaryLayout.cshtml";
}


<section class="page-title bg-2" style="background:url('@Url.Content("~/HomePage/images/bg/bg-image-2-1.jpg")')  no-repeat;">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <ul class="list-inline mb-0">
                    <li class="list-inline-item"><a asp-controller="Home" asp-action="index" class="text-sm letter-spacing text-white text-uppercase font-weight-bold">Home</a></li>
                    <li class="list-inline-item"><span class="text-white">|</span></li>
                    <li class="list-inline-item text-color text-uppercase text-sm letter-spacing">Course Page</li>
                </ul>
                <h1 class="text-lg text-white mt-2">Feedback</h1>
            </div>
        </div>
    </div>
</section>


<div class="container">


    <div class="row mt-5">

        <div class="card rounded-0 p-0 mb-5 col-12 ">

            <form enctype="multipart/form-data" asp-action="Create">

                <textarea class="form-control  mb-2" style="display: flex; align-items: center;justify-content: center; height:200px !important" placeholder="We Care about your opinion" asp-for="TestimonialsText"></textarea>
                <div class="col-12 " style="display: flex; align-items: center;justify-content: center;">
                    <button class="btn btn-main " type="submit">Send Feedback</button>
                </div>

            </form>

        </div>



    </div>
</div>


<div>
    <a asp-action="Index">Back to List</a>
</div>

