@{
	Layout = "~/Views/Shared/_PrimaryLayout.cshtml";
}
@model IEnumerable<Workout>

@{
	var path = ViewBag.HeaderImage;
}

<div class="main-wrapper ">
	<section class="page-title bg-2" style="background:url('@Url.Content("~/Images/"+path)')  no-repeat;">
		<div class="container">
			<div class="row">
				<div class="col-lg-12 text-center">
					<ul class="list-inline mb-0">
						<li class="list-inline-item"><a asp-controller="Home" asp-action="index" class="text-sm letter-spacing text-white text-uppercase font-weight-bold">Home</a></li>
						<li class="list-inline-item"><span class="text-white">|</span></li>
						<li class="list-inline-item text-color text-uppercase text-sm letter-spacing">Cources Page</li>
					</ul>
					<h1 class="text-lg text-white mt-2">Our Courses </h1>
				</div>
			</div>
		</div>
	</section>

	<!-- Section Course Start -->
	<section class="section course">
		<div class="container">
			<div class="row justify-content-center">
				<div class="col-lg-8 text-center">
					<div class="section-title">
						<div class="divider mb-3"></div>
						<h2>Our Courses</h2>
					</div>
				</div>
			</div>

			<div class="row">

				@foreach (var item in Model)
				{

					<div class="col-lg-4 col-md-6">
						<div class="card rounded-0 p-0 mb-5">
							<img style="object-fit: cover; height:350px" src="~/Images/@item.Image" alt="" class="img-fluid">

							<div class="card-body">
								<a asp-controller="Home" asp-action="SingleCourse" asp-route-CourseId=@item.WorkoutId><h2 class="mt-3 mb-0">@item.WorkoutName</h2></a>
								<ul class="list-inline">
									<li class="list-inline-item">
										<i class="ti-time mr-2 text-color"></i>Shift:
									</li>
									<li class="list-inline-item text-black">
										<strong>@item.Shift</strong>
									</li>
								</ul>
							</div>
						</div>
					</div>

				}
			</div>
		</div>
	</section>
</div>
