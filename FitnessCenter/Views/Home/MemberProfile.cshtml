@{
    Layout = "~/Views/Shared/_PrimaryLayout.cshtml";
}


@model FitnessCenter.Models.Member
<!doctype html>
<html>
<head>
    <meta charset='utf-8'>
    <meta name='viewport' content='width=device-width, initial-scale=1'>
    <title>Snippet - BBBootstrap</title>
    <link href='https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css' rel='stylesheet'>
    <link href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css' rel='stylesheet'>
    <script type='text/javascript' src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js'></script>
    <style>
        ::-webkit-scrollbar {
            width: 8px;
        }
        /* Track */
        ::-webkit-scrollbar-track {
            background: #f1f1f1;
        }

        /* Handle */
        ::-webkit-scrollbar-thumb {
            background: #888;
        }

            /* Handle on hover */
            ::-webkit-scrollbar-thumb:hover {
                background: #555;
            }

        body:before {
            content: "";
            position: absolute;
            left: 0;
            top: 0;
            bottom: 0;
            right: 0;
            width: 100%;
            height: 100%;
            background: #000;
            opacity: 0.8;
        }
    </style>
</head>
<body>

    @{
        var path = ViewBag.MemberProgilebackGround;
    }

    <section class="slider" style="background:url('@Url.Content("~/Images/"+path)')  no-repeat 0% 30%;">
        <div class="container">
            <div class="row ">
                <div class="col-md-4 border-right" style="background-color:white">
                    <div class="d-flex flex-column align-items-center text-center p-3 py-5"><img class="rounded-circle mt-5" src="~/Images/@Model.Image" height="120px" width="120px" style="object-fit:cover"><span class="font-weight-bold">@Model.FirstName @Model.LastName</span><span class="text-black-50">@Model.Email</span></div>
                </div>
                <div class="col-md-8" style="background-color:white">
                    <form enctype="multipart/form-data" asp-action="MemberProfile" class="signUp-form">
                        <div class="p-3 py-5">
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <div>
                                    <a asp-controller="Home" asp-action="WelcomeMember" class="d-flex flex-row align-items-center back"><i class="fa fa-long-arrow-left mr-1 mb-1"></i><h6>Back to home</h6></a>
                                </div>
                                <h6 class="text-right">Edit Profile</h6>
                            </div>


                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="MemberId" />

                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="JoinDate" />

                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="RoleId" />

                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="WorkoutPlaneId" />


                            <div class="row mt-2">
                                <div class="col-md-6">
                                    <input asp-for="FirstName" type="text" class="form-control" onfocus="this.style.border='2px solid #fe9418';" onblur="this.style.border='1px solid #ccc';" placeholder="First Name" required value=@Model.FirstName>
                                    <span asp-validation-for="FirstName" class="text-danger"></span>
                                </div>
                                <div class="col-md-6">
                                    <input asp-for="LastName" type="text" class="form-control" onfocus="this.style.border='2px solid #fe9418';" onblur="this.style.border='1px solid #ccc';" placeholder="Last Name" value=@Model.LastName>
                                    <span asp-validation-for="LastName" class="text-danger"></span>
                                </div>
                            </div>


                            <div class="row mt-2">
                                <div class="col-md-6">
                                    <input asp-for="Email" type="text" class="form-control" onfocus="this.style.border='2px solid #fe9418';" onblur="this.style.border='1px solid #ccc';" placeholder="Last Name" required value=@Model.Email>
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                                <div class="col-md-6">
                                    <input asp-for="Password" type="password" class="form-control" onfocus="this.style.border='2px solid #fe9418';" onblur="this.style.border='1px solid #ccc';" placeholder="Last Name" required value=@Model.Password>
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group mb-3">
                                <label asp-for="ImageFile"><i class="zmdi zmdi-account material-icons-name"></i></label>
                                <input asp-for="ImageFile" />
                            </div>

                            <div class="mt-5 text-right form-group"><button type="submit" class="form-control btn btn-main rounded submit px-3">Save Profile</button></div>

                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>



    <script type='text/javascript' src='https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.bundle.min.js'></script>
    <script type='text/javascript' src='#'></script>
    <script type='text/javascript' src='#'></script>
    <script type='text/javascript' src='#'></script>
    <script type='text/javascript'>#</script>
    <script type='text/javascript'>
        var myLink = document.querySelector('a[href="#"]');
                                            myLink.addEventListener('click', function(e) {
                                              e.preventDefault();
                                            });</script>

</body>
</html>