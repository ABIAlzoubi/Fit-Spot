@{
	Layout = "~/Views/Shared/_PrimaryLayout.cshtml";
}
@model FitnessCenter.Models.Aboutuspage
@{
	var aboutUsInfo = Model;
}

<div class="main-wrapper ">
	<section class="page-title bg-2" style="background:url('@Url.Content("~/Images/"+aboutUsInfo.Headerpic)')  no-repeat;">
		<div class="container">
			<div class="row">
				<div class="col-lg-12 text-center">
					<ul class="list-inline mb-0">
						<li class="list-inline-item"><a asp-controller="Home" asp-action="index" class="text-sm letter-spacing text-white text-uppercase font-weight-bold">Home</a></li>
						<li class="list-inline-item"><span class="text-white">|</span></li>
						<li class="list-inline-item text-color text-uppercase text-sm letter-spacing">About Us Page</li>
					</ul>
					<h1 class="text-lg text-white mt-2">What we are</h1>
				</div>
			</div>
		</div>
	</section>


	<!-- Section About start -->
	<section class="section about">
		<div class="container">
			<div class="row align-items-center">
				<div class="col-lg-3 col-md-6">
					@* Head Pic 1 *@
					<img src="~/Images/@aboutUsInfo.Headpic1" alt="" class="img-fluid">
				</div>
				<div class="col-lg-3 mt-lg-4 col-md-6">
					@* Head Pic 2 *@
					<img src="~/Images/@aboutUsInfo.Headpic2" alt="" class="img-fluid">
				</div>
				<div class="col-lg-6 col-md-12">
					<div class="about-item position-relative mt-5 mt-lg-0">

						@* About us header *@
						<h2 class="mt-1 mb-3">@aboutUsInfo.Aboutusheadertext</h2>

						@* About us paragrph *@
						<p class="mb-4">@aboutUsInfo.Aboutusparagraph</p>

					</div>
				</div>
			</div>
		</div>
	</section>
	<!-- Section About End -->
	

	<!-- Section Gallery Start -->
	<section class="gallery">
		<div class="container">
			<div class="row justify-content-center">
				<div class="col-lg-8 text-center">
					<div class="section-title">
						<div class="divider mb-3"></div>
						
					</div>
				</div>
			</div>
		</div>


	</section>
</div>

	<!-- Section Gallery END -->
